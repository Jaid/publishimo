    "parse-author": "^2.0.0",
    "read-pkg-up": "^4.0.0",
    "sort-keys": "^2.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
