    "fs-readdir-recursive": "^1.1.0",
    "jest": "^23.6.0",
    "jest-plugin-fs": "^2.9.0",
    "metro-memory-fs": "^0.50.0",
    "mock-fs": "^4.7.0",
    "regenerator-runtime": "^0.13.1",
    "webpack": "^4.27.0",
    "webpack-cli": "^3.1.2"
  },
  "scripts": {
    "clean": "cross-env ./node_modules/.bin/gulp clean",
    "build-lib-prod": "cross-env NODE_ENV=production node_modules/.bin/webpack --config config/webpack-lib.js",
    "build-lib-dev": "cross-env node_modules/.bin/webpack --config config/webpack-lib.js",
    "build-cli-prod": "cross-env NODE_ENV=production node_modules/.bin/webpack --config config/webpack-cli.js",
    "build-cli-dev": "cross-env node_modules/.bin/webpack --config config/webpack-cli.js",
    "test": "yarn build-lib-dev && jest",
    "test:debug": "yarn build-lib-dev && cross-env node --inspect node_modules/jest/bin/jest.js --runInBand"
  }
}